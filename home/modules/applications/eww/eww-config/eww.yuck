(defwindow greeting
  :monitor 0
  :geometry (geometry
              :width "100%"
              :height "100%"
              :anchor "center center")
  :stacking "overlay"
  :focusable false
  :visible false
  (box
    :class "greeting-container"
    :orientation "vertical"
    :halign "center"
    :valign "center"
    (label
      :class "greeting-main"
      :text {greeting-text})
    (label
      :class "greeting-sub"
      :text {greeting-subtext})))